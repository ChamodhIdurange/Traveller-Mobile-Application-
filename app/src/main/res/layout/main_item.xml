<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="25dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Student Name"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contacttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Contact Number"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contacttext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Email"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/typetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailtext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Type"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/currencytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typetext"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Currency"
            android:textColor="#000"
            android:textSize="25sp" />
        <!--            android:layout_centerVerticle = "true"-->

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="60dp"
            android:layout_below="@id/currencytext"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnaddcomment"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:text="Add Comment"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnseecomment"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="See Comment"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btnseecurrency"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Change Currency"
                android:textAllCaps="false" />
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>